{
  "type": "index_hadoop",
  "hadoopDependencyCoordinates": [
    "org.apache.hadoop:hadoop-client:2.4.1"
  ],
  "spec": {
    "dataSchema": {
      "dataSource": "pageviews",
      "parser": {
        "type": "string",
        "parseSpec": {
          "format": "json",
          "timestampSpec": {
            "column": "timestamp",
            "format": "auto"
          },
          "dimensionsSpec": {
            "dimensions": [
              "url"
            ],
            "dimensionExclusions": [
              "eventId",
              "userId"
            ],
            "spatialDimensions": []
          }
        }
      },
      "metricsSpec": [
        {
          "type": "count",
          "name": "count"
        },
        {
          "type": "hyperUnique",
          "fieldName": "userId",
          "name": "userIdHll"
        }
      ],
      "granularitySpec": {
        "type": "uniform",
        "segmentGranularity": "DAY",
        "queryGranularity": "HOUR",
        "intervals": [
          "2015-03-24/2015-03-25"
        ]
      }
    },
    "ioConfig": {
      "type": "hadoop",
      "inputSpec": {
        "type": "static",
        "paths": "hdfs://192.168.59.103:9000/data/events.json"
      }
    },
    "tuningConfig": {
      "type": "hadoop"
    }
  }
}